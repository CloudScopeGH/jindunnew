<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cloudspace.jindun.activity.Woyao.SystemSettingsActivity"
    android:background="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#8b8a8a">

        <ImageView
            android:id="@+id/back2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/backbtn_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="系统设置"
            android:textColor="#000"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="20dp"
        android:background="@drawable/shape_layout"
        android:id="@+id/part1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp">
        <TextView
            android:padding="5dp"
            android:id="@+id/p1_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="震动提醒"
            android:textColor="#000" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/p1_sc1"
            android:layout_alignTop="@id/p1_t1"
            android:layout_alignBottom="@id/p1_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
        <TextView
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/p1_t1"
            android:textColor="#000"
            android:text="语音对讲"
            android:layout_alignParentStart="true"
            android:id="@+id/p1_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
        <android.support.v7.widget.SwitchCompat
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/p1_t2"
            android:layout_alignTop="@id/p1_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>


    <RelativeLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/shape_layout"
        android:id="@+id/part2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/part1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="通讯录更新可使用环境"
            android:id="@+id/p2_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_separator"
            android:layout_below="@+id/p2_title"
            android:id="@+id/p2_line"
            android:layout_width="match_parent"
            android:layout_height="1.5dp" />
        <TextView
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:layout_alignStart="@id/p2_title"
            android:layout_below="@id/p2_line"
            android:id="@+id/p2_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2G/3G网络"
            android:textColor="#000"
            android:layout_alignLeft="@id/p2_title" />
        <TextView
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:layout_alignStart="@id/p2_title"
            android:layout_below="@id/p2_t1"
            android:id="@+id/p2_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4G网络"
            android:textColor="#000"
            android:layout_alignLeft="@id/p2_title" />
        <TextView
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:layout_alignStart="@id/p2_title"
            android:layout_below="@id/p2_t2"
            android:id="@+id/p2_t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi网络"
            android:textColor="#000"
            android:layout_alignLeft="@id/p2_title" />
        <RadioGroup
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_alignTop="@id/p2_t1"
            android:layout_alignBottom="@id/p2_t3"
            android:layout_alignRight="@id/p2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_gravity="center"
                android:background="@drawable/checkbox_border"
                android:layout_marginBottom="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <CheckBox
                android:layout_gravity="center"
                android:background="@drawable/checkbox_border"
                android:layout_marginBottom="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <CheckBox
                android:layout_gravity="center"
                android:background="@drawable/checkbox_border"
                android:layout_marginBottom="25dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RadioGroup>

    </RelativeLayout>
    <RelativeLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/shape_layout"
        android:id="@+id/part3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/part2"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="语音对讲使用环境"
            android:id="@+id/p3_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_separator"
            android:layout_below="@+id/p3_title"
            android:id="@+id/p3_line"
            android:layout_width="match_parent"
            android:layout_height="1.5dp" />

        <TextView
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:layout_alignStart="@id/p3_title"
            android:layout_below="@id/p3_line"
            android:id="@+id/p3_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2G/3G网络"
            android:textColor="#000"
            android:layout_alignLeft="@id/p3_title" />
        <TextView
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:layout_alignStart="@id/p3_title"
            android:layout_below="@id/p3_t1"
            android:id="@+id/p3_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4G网络"
            android:textColor="#000"
            android:layout_alignLeft="@id/p3_title" />
        <TextView
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:layout_alignStart="@id/p3_title"
            android:layout_below="@id/p3_t2"
            android:id="@+id/p3_t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi网络"
            android:textColor="#000"
            android:layout_alignLeft="@id/p3_title" />
        <RadioGroup
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_alignTop="@id/p3_t1"
            android:layout_alignBottom="@id/p3_t3"
            android:layout_alignRight="@id/p3_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_gravity="center"
                android:background="@drawable/checkbox_border"
                android:layout_marginBottom="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <CheckBox
                android:layout_gravity="center"
                android:background="@drawable/checkbox_border"
                android:layout_marginBottom="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <CheckBox
                android:layout_gravity="center"
                android:background="@drawable/checkbox_border"
                android:layout_marginBottom="25dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RadioGroup>
    </RelativeLayout>
    <RelativeLayout
        android:padding="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/shape_layout"
        android:id="@+id/part4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/part3"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp">
        <TextView
            android:padding="5dp"
            android:id="@+id/p4_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="清楚缓存"
            android:textColor="#000" />

        <ImageView
            android:src="@drawable/backbtn_black"
            android:id="@+id/p4_img1"
            android:layout_alignTop="@id/p4_t1"
            android:layout_alignBottom="@id/p4_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_below="@id/p4_t1"
            android:padding="5dp"
            android:id="@+id/p4_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="检查最新版本"
            android:textColor="#000" />
        <ImageView
            android:src="@drawable/backbtn_black"
            android:id="@+id/p4_img2"
            android:layout_alignTop="@id/p4_t2"
            android:layout_alignBottom="@id/p4_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
        <TextView
            android:gravity="center"
            android:layout_alignTop="@id/p4_img2"
            android:layout_alignBottom="@id/p4_img2"
            android:textColor="#000"
            android:text="1.51"
            android:layout_toLeftOf="@id/p4_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000"
            android:text="关于我们"
            android:layout_marginTop="15dp"
            android:layout_below="@id/p4_t2"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
        <Button
            android:id="@+id/sys_btn_logbut"
            android:layout_below="@id/part4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_layout"
            android:text="退出登录"
            android:textColor="#000"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            />
    </RelativeLayout>
</ScrollView>
