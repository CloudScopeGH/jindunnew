<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_forum_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/report_listview_item_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/head3"/>

    <LinearLayout
        android:id="@+id/ll01"
        android:layout_toRightOf="@id/report_listview_item_image"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/report_listview_item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="情况汇报"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/report_listview_item_tv_details"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_update"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="汇报内容"
            android:textSize="13sp"
            android:singleLine="true"
            android:ellipsize="end"
        />
    </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:gravity="right">

            <TextView
                android:id="@+id/report_listview_item_time01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="13:30"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/report_listview_item_time02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_update"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="2010-03-23"
                android:textSize="13sp"
                android:singleLine="true"
                android:ellipsize="end"
                />
    </LinearLayout>

</RelativeLayout>