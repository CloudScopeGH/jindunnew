<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.cloudspace.jindun.fragment.MenuLeftFragment">
    <RelativeLayout
        android:id="@+id/drawer_collect_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60px"
        >
    <com.cloudspace.jindun.ui.RoundCornerImageView
        android:id="@+id/drawer_image_head"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:src="@drawable/head3"/>
    <TextView
        android:id="@+id/drawer_text_name"
        android:layout_below="@id/drawer_image_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名字"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="#f0f0f0"
        android:textSize="20sp"/>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/drawer_collect_r2"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/drawer_collect_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            >

            <ImageView
                android:id="@+id/drawer_image_phone"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/head2" />

            <TextView
                android:id="@+id/drawer_text_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/drawer_image_phone"
                android:layout_marginTop="10px"
                android:text="手机"
                android:textColor="#f0f0f0"
                android:textSize="20sp" />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/drawer_collect_r3"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/drawer_collect_r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        >

        <ImageView
            android:id="@+id/drawer_image_pass"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/head3" />
        <TextView
            android:id="@+id/drawer_text_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drawer_image_pass"
            android:layout_marginTop="10px"
            android:text="修改密码"
            android:textColor="#f0f0f0"
            android:textSize="20sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/drawer_text_sys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_collect_r3"
        android:layout_marginTop="40px"
        android:text="系统设置"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textColor="#f0f0f0"
        android:textSize="20sp"
        android:clickable="true"/>
</RelativeLayout>
